<project name="SameGame" default="run">
	<target name="compile">
		<javac srcdir="."/>
	</target>
	<target name="run" depends="compile">
		<exec executable="firefox">
			<arg value="SameGame.html" />
		</exec>				
	</target>
	<target name="clean">
		<delete>
			<fileset dir="." includes="**/*.class" />
		</delete>
	</target>
</project>

